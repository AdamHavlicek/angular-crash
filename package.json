{
  "name": "angular-crash",
  "version": "0.0.0",
  "scripts": {
    "build": "ng build",
    "start": "ng serve --configuration development",
    "start:dev": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "server": "json-server --watch db.json --port 5000",
    "codegen:gen": "graphql-codegen --config codegen.yml"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.2",
    "@angular/common": "~13.2.2",
    "@angular/compiler": "~13.2.2",
    "@angular/core": "~13.2.2",
    "@angular/forms": "~13.2.2",
    "@angular/platform-browser": "~13.2.2",
    "@angular/platform-browser-dynamic": "~13.2.2",
    "@angular/router": "~13.2.2",
    "@apollo/client": "^3.5.8",
    "@fortawesome/angular-fontawesome": "0.10.1",
    "@fortawesome/fontawesome-svg-core": "^1.3.0",
    "@fortawesome/free-brands-svg-icons": "^6.0.0",
    "@fortawesome/free-regular-svg-icons": "^6.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@ngrx/component-store": "^13.0.2",
    "@ngrx/effects": "^13.0.2",
    "@ngrx/entity": "^13.0.2",
    "@ngrx/router-store": "^13.0.2",
    "@ngrx/store": "^13.0.2",
    "@ngrx/store-devtools": "^13.0.2",
    "apollo-angular": "^2.6.0",
    "bootstrap": "^5.1.3",
    "graphql": "^15.6.0",
    "json-server": "^0.17.0",
    "ngx-tailwind": "^3.0.0",
    "rxjs": "~7.5.3",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^13.0.3",
    "@angular-devkit/build-angular": "~13.2.2",
    "@angular-eslint/schematics": "^13.0.1",
    "@angular/cli": "~13.2.2",
    "@angular/compiler-cli": "~13.2.2",
    "@graphql-codegen/cli": "2.5.0",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "2.4.3",
    "@graphql-codegen/typescript-apollo-angular": "3.3.3",
    "@graphql-codegen/typescript-operations": "^2.2.4",
    "@tailwindcss/aspect-ratio": "latest",
    "@tailwindcss/forms": "0.4.0-alpha.2",
    "@tailwindcss/line-clamp": "latest",
    "@tailwindcss/typography": "next",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.16",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "autoprefixer": "latest",
    "eslint": "^8.8.0",
    "jest": "^27.5.1",
    "jest-preset-angular": "^11.1.0",
    "postcss": "latest",
    "prettier": "2.5.1",
    "tailwindcss": "latest",
    "ts-node": "^10.5.0",
    "typescript": "~4.4.4"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "rootDir": ".",
    "roots": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "html",
      "json"
    ],
    "transform": {
      "^.+\\.(t|j)sx|html?$": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true
  },
  "packageManager": "yarn@3.1.1"
}
